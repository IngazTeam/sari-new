# =============================================
# Sari AI Sales Agent - Environment Variables
# =============================================
# Copy this file to .env and fill in the values
# cp .env.example .env

# =============================================
# CRITICAL - Server will not start without these
# =============================================

# MySQL database connection string
DATABASE_URL=mysql://user:password@localhost:3306/sari

# Secret key for JWT token signing (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-chars

# OpenAI API key for AI features
OPENAI_API_KEY=sk-...

# =============================================
# APPLICATION
# =============================================

# Server port (default: 3000)
PORT=3000

# Environment mode
NODE_ENV=production

# Application URL
VITE_APP_URL=https://sary.live

# Frontend URL (used for CORS in production — must match the actual domain)
FRONTEND_URL=https://sary.live

# =============================================
# WHATSAPP (Green API)
# =============================================

GREEN_API_INSTANCE_ID=
GREEN_API_TOKEN=

# =============================================
# PAYMENTS (Tap Payments)
# =============================================

TAP_SECRET_KEY=sk_live_...
TAP_PUBLIC_KEY=pk_live_...

# =============================================
# EMAIL (SMTP2GO)
# =============================================

SMTP2GO_API_KEY=
SMTP_FROM=noreply@sary.live

# =============================================
# GOOGLE OAUTH
# =============================================

VITE_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================
# WEBHOOK SECRETS (Optional — enables signature verification)
# =============================================

ZID_WEBHOOK_SECRET=
CALENDLY_WEBHOOK_SECRET=
